{
    "name": "tomgud/http-diff",
    "description": "diff for two http requests",
    "type": "command",
    "require": {
        "guzzlehttp/guzzle": "^6.2",
        "symfony/console": "^3.2",
        "symfony/yaml": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "TomGud\\": [
                "src/TomGud",
                "test/TomGud"
            ]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tomas Gudmundsson",
            "email": "tomasgudm@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "scripts" : {
        "compile" : [
            "test -d bin || mkdir bin && cp src/Application.php bin/http-diff",
            "chmod a+x bin/http-diff"
        ]
    }
}
